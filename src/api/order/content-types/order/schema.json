{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "total_amount": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "payment_id": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "is_paid": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "ref_order": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "basket": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::basket.basket"
    },
    "customer": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::customer.customer"
    },
    "address": {
      "type": "component",
      "repeatable": false,
      "component": "address.address"
    },
    "delivery_date": {
      "type": "datetime"
    },
    "additional_informations": {
      "type": "string"
    },
    "raw_amount": {
      "type": "decimal"
    },
    "delivery_fee": {
      "type": "decimal"
    },
    "service_fee": {
      "type": "decimal",
      "default": 0
    },
    "affiliation_status": {
      "type": "enumeration",
      "enum": [
        "PENDING",
        "IN_PROGRESS",
        "VALIDATED"
      ]
    },
    "amount_order_tracked": {
      "type": "decimal"
    }
  }
}
